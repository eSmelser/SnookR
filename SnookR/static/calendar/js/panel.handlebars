<div class="panel panel-default">
    <div class="panel-body">
        <div class="pull-left">
            <a href="{{ sub.url }}">
                <img class="img-circle" width="50px" height="50px" style="margin-right:8px; margin-top:-5px;"
                     src="{{ sub.user.thumbnailUrl }}">
            </a>
        </div>
        <div class="invite-status" data-invited={{ sub.invited }} data-sub-id={{ sub.id }}>
        </div>
        <h4 class="pull-left"><a href="{{ sub.user.url }}" style="text-decoration:none;"><strong>{{ sub.user.username }}</strong></a></h4>
        {{#if sub.invited }}
          <button class="checkmark-button btn btn-success pull-right" type="button" name="button"><span class="glyphicon glyphicon-ok pull-right"></span></button>
        {{else}}
          <button class="invite-button session-button pull-right btn btn-default" type="button" data-sub-id={{ sub.id }}>Invite</button>
        {{/if}}
    </div>
</div>
